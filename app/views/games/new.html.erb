<div class="container m-3">
  <h1>New game</h1>
  <div class="row g-3">
    <% @letters.each do |letter| %>
      <div class="col">
        <p class="border border-secondary fs-3 text-center text-white tiles">
          <%= letter %>
        </p>
      </div>
    <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'letters', @letters %>
    <label for="word" class="pb-2">What is the longest word you can find?</label>
    <div class="input-group">
      <input type="text" name="word" id="word" class="form-control">
      <input type="submit" class="btn" style="border: 1px solid lightgrey" value="Play">
    </div>
  </form>
</div>
